pkgname=hello-world
pkgver=1.0.0
pkgrel=1
pkgdesc="Tiny hello world CLI example"
arch=('any')
url="https://example.com/hello-world"
license=('MIT')
source=('hello.sh')
sha256sums=('SKIP') # replace with real checksum for non-demo use

package() {
  install -Dm755 "${srcdir}/hello.sh" "${pkgdir}/usr/bin/hello-world"
}


